# Routes Config
#
# This file defines all application routes (Higher priority routes first)
#

module:testrunner
# module:jobs


# Games
POST    /api/game/create                            Game.Create
GET     /api/games                                  Game.Index
GET     /api/game/:id                               Game.Show
PATCH   /api/game/:id                               Game.Update
DELETE  /api/game/:id                               Game.Delete
POST    /api/game/:id/addToGroup                    Game.AddToGroup
POST    /api/game/addAllToGroup                     Game.AddAllToGroup

# Matches
GET     /api/group/:gid/game/:id/match              Match.New
POST    /api/group/:gid/game/:id/match              Match.Create
GET     /api/match/:id                              Match.Show
POST    /api/match/:id/addScore                     Match.AddScore
POST    /api/match/removeScore/:id                  Match.RemoveScore
DELETE  /api/match/:id/                             Match.Delete

# Temporary routes.
POST    /api/game/:id/edit                          Game.Update
POST    /api/game/:id/delete                        Game.Delete
POST    /api/match/:id/delete                       Match.Delete

# Users
GET     /api/signin                                 App.SignIn
GET     /api/signup                                 User.SignUp
POST    /api/signup                                 User.Create
POST    /api/signin                                 App.Login
GET     /api/signout                                App.Signout
POST    /api/signout                                App.Signout
GET     /api/addFriend                              User.FindFriend
POST    /api/addFriend                              User.AddFriend
POST    /api/acceptRequest                          User.AcceptRequest
GET     /api/user/:username                         User.Show

# Groups
GET     /api/group/new                              Group.New
POST    /api/group/create                           Group.Create
GET     /api/group/:id                              Group.Show
GET     /api/groups                                 Group.Index
POST    /api/acceptInvitation                       Group.AcceptInvitation
POST    /api/unsendInvitation                       Group.UnsendInvitation
POST    /api/group/:id/sendInvitation               Group.SendInvitation
GET     /api/group/:id/scoreboard                   Group.Scoreboard

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/*filepath                       Static.Serve("public")

# Catch all, this will route any request into the controller path
#
#                    **** WARNING ****
# Enabling this exposes any controller and function to the web.
# ** This is a serious security issue if used online **
#
# For rapid development uncomment the following to add new controller.action endpoints
# without having to add them to the routes table.
# *       /:controller/:action                    :controller.:action
